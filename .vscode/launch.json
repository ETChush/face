    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Main",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/__main__.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "${input:inputDir}",
                "--debug",
                "--size",
                "1920x1080"
            ]
        },
        {
            "name": "Debug Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": []
        }
    ],
    "inputs": [
        {
            "id": "inputDir",
            "type": "promptString",
            "description": "Input images directory path",
            "default": "/Users/kyleliu/Downloads/lyf"
        }
    ]
}